@page
@model DAB_NoSQL_assignment.ProfileModel

<h1>Profile</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <h5>Create a new post</h5>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="post.PostOwner"></label>
                <input asp-for="post.PostOwner" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="post.Text"></label>
                <input asp-for="post.Text" class="form-control" />
            </div>
            <hr />
            <button type="submit" class="btn btn-primary" asp-page-handler="PostComment">Create</button>
        </form>
    </div>
</div>

<h5>List of Posts</h5>
<table>
    <tr>
        <th>PostOwner</th>
        <th>Text</th>
    </tr>
    <tr>
        @if (Model.posts != null)
        {
            @foreach (var post in @Model.posts)
             {
                 <td>@post.PostOwner</td>
                 <td>@post.Text</td>
             }
        }
    </tr>
</table>



